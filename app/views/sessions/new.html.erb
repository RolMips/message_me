<div class="ui container" style="width:600px">
  <div class="ui raised segment">
    <h2 class="ui center aligned icon header">
      <i class="circular orange power off icon"></i>
      Welcome to message me !
    </h2>
    <%= form_for(:session, html: {class: "ui form", role: "form"}, url: login_path) do |f| %>
      <div class="field">
        <%= f.label :username, "User Name" %>
        <div class="ui left icon input">
          <%= f.text_field :username, placeholder: "Username" %>
          <i class="user icon"></i>
        </div>
      </div>
      <div class="field">
        <%= f.label :password, "Password" %>
        <div class="ui left icon input">
          <%= f.password_field :password %>
          <i class="lock icon"></i>
        </div>
      </div>
      <%= f.submit("Log in", class: "ui fluid large orange submit button") %>
    </div>
    <% end %>
  </div>
</div>
